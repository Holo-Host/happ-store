{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Ratings Schema",
  "required": [
    "rate",
    "review",
    "author",
    "timestamp"
  ],
  "properties": {
    "rate": {
      "$id": "#/properties/rate",
      "type": "integer",
      "title": "The Rate Schema",
      "default": 0,
      "examples": [
        5
      ],
      "minimum": 0.0,
      "maximum": 5.0
    },
    "review": {
      "$id": "#/properties/review",
      "type": "string",
      "title": "The Review Schema",
      "default": "",
      "examples": [
        "The best"
      ],
      "pattern": "^(.*)$"
    },
    "author": {
      "$id": "#/properties/author",
      "type": "string",
      "title": "The Author Schema",
      "default": "",
      "examples": [
        "QWUAasdgraAFIdavrwADF"
      ],
      "pattern": "^(.*)$"
    },
    "timestamp": {
      "$id": "#/properties/timestamp",
      "type": "string",
      "title": "The timestamp Schema",
      "default": "",
      "examples": [
        "TIME"
      ],
      "pattern": "^(.*)$"
    }  }
}
